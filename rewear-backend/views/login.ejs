<% layout = 'layout' %>

<h2>Login to ReWear</h2>

<form action="/api/auth/login" method="POST" class="form-box">
  <label>Email:</label>
  <input type="email" name="email" required />

  <label>Password:</label>
  <input type="password" name="password" required />

  <button type="submit">Login</button>
</form>

<hr />

<div style="margin-top: 1rem;">
  <a href="/auth/google">
    <button type="button" style="
      width: 100%;
      padding: 0.75rem;
      background-color: #db4437;
      border: none;
      color: white;
      font-weight: bold;
      border-radius: 4px;
      cursor: pointer;
    ">
      <img src="https://developers.google.com/identity/images/g-logo.png" alt="Google logo" style="width:20px; vertical-align:middle; margin-right: 8px;">
      Login with Google
    </button>
  </a>
</div>
