<% layout = 'layout' %>

<h2>Welcome to ReWear</h2>

<!-- üîç Search Bar -->
<div class="search-bar">
  <input type="text" placeholder="Search for clothing..." />
  <button>üîç</button>
</div>

<!-- üñºÔ∏è Banner Image -->
<div class="banner">
  <img src="https://plus.unsplash.com/premium_photo-1717629832671-6d410f1409a6?q=80&w=1170&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Fashr" />
  
</div>

<!-- üß© Category Section -->
<h3>Categories</h3>
<div class="categories-horizontal">
  <a href="/dashboard" class="category-card <%= selectedCategory === 'All' ? 'active' : '' %>">All</a>
  <a href="/dashboard?category=Men" class="category-card <%= selectedCategory === 'Men' ? 'active' : '' %>">Men</a>
  <a href="/dashboard?category=Women" class="category-card <%= selectedCategory === 'Women' ? 'active' : '' %>">Women</a>
  <a href="/dashboard?category=Kids" class="category-card <%= selectedCategory === 'Kids' ? 'active' : '' %>">Kids</a>
  <a href="/dashboard?category=Winter" class="category-card <%= selectedCategory === 'Winter' ? 'active' : '' %>">Winter</a>
  <a href="/dashboard?category=Summer" class="category-card <%= selectedCategory === 'Summer' ? 'active' : '' %>">Summer</a>
  <a href="/dashboard?category=Accessories" class="category-card <%= selectedCategory === 'Accessories' ? 'active' : '' %>">Accessories</a>
</div>


<!-- üõçÔ∏è Product Listings -->
<h3>Available Items</h3>

<div class="card-grid">
  <% if (items.length === 0) { %>
    <p>No items found.</p>
  <% } else { %>
    <% items.forEach(item => { %>
      <div class="card">
        <img src="<%= item.imageUrl || 'https://via.placeholder.com/150' %>" alt="Item Image" style="width: 100%; height: 200px; object-fit: cover;" />
        <div class="card-body">
          <h3><%= item.name %></h3>
          <p><%= item.description %></p>
          <p><strong>Size:</strong> <%= item.size %></p>
          <p><strong>Category:</strong> <%= item.category %></p>
        </div>
      </div>
    <% }) %>
  <% } %>
</div>
