<% layout = 'layout' %>

<h2>User Dashboard</h2>

<div class="dashboard-container">
  <!-- User Profile -->
  <div class="user-info">
    <img src="<%= user.avatar %>" alt="User Avatar" class="avatar" />
    <div class="details">
      <h3><%= user.name %></h3>
      <p>Email: <%= user.email || "tapan@example.com" %></p>
      <p>Points: <%= user.points || 100 %></p>
    </div>

    <!-- ðŸ”˜ Buttons to jump to sections -->
    <div class="dashboard-buttons">
      <a href="#my-listings" class="btn-jump">My Listings</a>
      <a href="#my-purchases" class="btn-jump">My Purchases</a>
    </div>
  </div>

  <!-- ðŸ“¦ My Listings -->
  <h3 id="my-listings">My Listings</h3>
  <div class="card-grid">
    <% myListings.forEach(item => { %>
      <div class="card">
        <img src="<%= item.imageUrl %>" />
        <div class="card-body">
          <h4><%= item.name %></h4>
        </div>
      </div>
    <% }) %>
  </div>

  <!-- ðŸ›’ My Purchases -->
  <h3 id="my-purchases">My Purchases</h3>
  <div class="card-grid">
    <% myPurchases.forEach(item => { %>
      <div class="card">
        <img src="<%= item.imageUrl %>" />
        <div class="card-body">
          <h4><%= item.name %></h4>
        </div>
      </div>
    <% }) %>
  </div>
</div>
